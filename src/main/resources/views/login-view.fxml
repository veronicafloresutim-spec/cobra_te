<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.LoginController">
   <center>
      <StackPane>
         <children>
            <VBox alignment="CENTER" maxWidth="420.0" minWidth="420.0" spacing="32.0" style="-fx-padding: 24;">
               <children>
                  <!-- Logo/Título -->
                  <VBox alignment="CENTER" spacing="8.0">
                     <children>
                        <Label text="☕ Cobra Te" textFill="#6750A4">
                           <font>
                              <Font name="System Bold" size="40.0" />
                           </font>
                        </Label>
                        <Label text="Sistema POS - Cafetería" textFill="#49454F">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Formulario de Login -->
                  <VBox spacing="24.0" style="-fx-background-color: #FFFBFE; -fx-background-radius: 28; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0.3, 0, 1); -fx-border-color: #E7E0EC; -fx-border-width: 1; -fx-border-radius: 28;">
                     <children>
                        <Label text="Iniciar Sesión" textFill="#1D1B20">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        
                        <!-- Campo Email -->
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Correo Electrónico" textFill="#49454F">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtEmail" promptText="tu-email@cobra-te.com" 
                                       style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 16; -fx-font-size: 16; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                       focusTraversable="true">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        
                        <!-- Campo Contraseña -->
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Contraseña" textFill="#49454F">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="txtPassword" promptText="Tu contraseña" 
                                           style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 4; -fx-padding: 16; -fx-font-size: 16; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                           focusTraversable="true">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </PasswordField>
                           </children>
                        </VBox>
                        
                        <!-- Error Label -->
                        <Label fx:id="lblError" textFill="#B3261E" visible="false" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        
                        <!-- Botones -->
                        <HBox alignment="CENTER" spacing="16.0">
                           <children>
                              <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefWidth="140.0" prefHeight="40.0"
                                    style="-fx-background-color: #6750A4; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-background-radius: 20; -fx-font-size: 14; -fx-cursor: hand;"
                                    text="Ingresar">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="140.0" prefHeight="40.0"
                                    style="-fx-background-color: transparent; -fx-text-fill: #6750A4; -fx-border-color: #6750A4; -fx-border-width: 1; -fx-border-radius: 20; -fx-font-size: 14; -fx-cursor: hand;"
                                    text="Cancelar">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                        
                        <!-- Progress Indicator -->
                        <ProgressIndicator fx:id="progressIndicator" maxHeight="24.0" maxWidth="24.0" visible="false" 
                                         style="-fx-progress-color: #6750A4;" />
                     </children>
                     <padding>
                        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Sección de registro -->
                  <VBox alignment="CENTER" spacing="16.0" style="-fx-background-color: #FFFBFE; -fx-background-radius: 28; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0.3, 0, 1); -fx-border-color: #E7E0EC; -fx-border-width: 1; -fx-border-radius: 28;">
                     <children>
                        <Label text="¿No tienes cuenta?" textFill="#1D1B20">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Registra tu cuenta de cajero" textFill="#49454F">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Button fx:id="btnRegistro" mnemonicParsing="false" onAction="#handleRegistro" prefWidth="200.0" prefHeight="40.0"
                              style="-fx-background-color: #FF6B35; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-background-radius: 20; -fx-font-size: 14; -fx-cursor: hand;"
                              text="Crear Cuenta">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="24.0" left="32.0" right="32.0" top="24.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
   <style>
      -fx-background-color: linear-gradient(to bottom, #FEF7FF, #F7F2FA);
   </style>
</BorderPane>
