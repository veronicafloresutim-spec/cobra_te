<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.RegistroController">
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
         <content>
            <StackPane>
               <children>
                  <VBox alignment="CENTER" maxWidth="480.0" minWidth="480.0" spacing="16.0" style="-fx-padding: 16;">
                     <children>
                        <!-- Logo/Título -->
                        <VBox alignment="CENTER" spacing="6.0">
                           <children>
                              <Label text="☕ Cobra Te" textFill="#6750A4">
                                 <font>
                                    <Font name="System Bold" size="28.0" />
                                 </font>
                              </Label>
                              <Label text="Registro de Nuevo Cajero" textFill="#49454F">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <!-- Formulario de Registro -->
                        <VBox spacing="14.0" style="-fx-background-color: #FFFBFE; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 4, 0.3, 0, 1); -fx-border-color: #E7E0EC; -fx-border-width: 1; -fx-border-radius: 20;">
                           <children>
                              <Label text="Información Personal" textFill="#1D1B20">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              
                              <!-- Nombres -->
                              <VBox spacing="6.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="4.0">
                                       <children>
                                          <Label text="Nombres" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <Label text="*" textFill="#B3261E">
                                             <font>
                                                <Font name="System Bold" size="13.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <TextField fx:id="txtNombres" promptText="Ingrese sus nombres" 
                                             style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                             focusTraversable="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>

                              <!-- Apellidos -->
                              <HBox spacing="12.0">
                                 <children>
                                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <HBox alignment="CENTER_LEFT" spacing="4.0">
                                             <children>
                                                <Label text="Apellido Paterno" textFill="#49454F">
                                                   <font>
                                                      <Font size="13.0" />
                                                   </font>
                                                </Label>
                                                <Label text="*" textFill="#B3261E">
                                                   <font>
                                                      <Font name="System Bold" size="13.0" />
                                                   </font>
                                                </Label>
                                             </children>
                                          </HBox>
                                          <TextField fx:id="txtApellidoPaterno" promptText="Apellido paterno" 
                                                   style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                                   focusTraversable="true">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </TextField>
                                       </children>
                                    </VBox>
                                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Apellido Materno" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <TextField fx:id="txtApellidoMaterno" promptText="Apellido materno" 
                                                   style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                                   focusTraversable="true">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </TextField>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>

                              <!-- Separador -->
                              <Separator style="-fx-background-color: #E7E0EC;">
                                 <VBox.margin>
                                    <Insets bottom="4.0" top="4.0" />
                                 </VBox.margin>
                              </Separator>

                              <Label text="Información de Contacto" textFill="#1D1B20">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>

                              <!-- Email -->
                              <VBox spacing="6.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="4.0">
                                       <children>
                                          <Label text="Correo Electrónico" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <Label text="*" textFill="#B3261E">
                                             <font>
                                                <Font name="System Bold" size="13.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <TextField fx:id="txtCorreo" promptText="correo@ejemplo.com" 
                                             style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                             focusTraversable="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>

                              <!-- Teléfono y Sexo -->
                              <HBox spacing="12.0">
                                 <children>
                                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Teléfono" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <TextField fx:id="txtTelefono" promptText="Número de teléfono" 
                                                   style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                                   focusTraversable="true">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </TextField>
                                       </children>
                                    </VBox>
                                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="Sexo" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <ComboBox fx:id="cmbSexo" maxWidth="1.7976931348623157E308" promptText="Seleccionar" 
                                                  style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 10 12; -fx-font-size: 14;">
                                          </ComboBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>

                              <!-- Separador -->
                              <Separator style="-fx-background-color: #E7E0EC;">
                                 <VBox.margin>
                                    <Insets bottom="4.0" top="4.0" />
                                 </VBox.margin>
                              </Separator>

                              <Label text="Configuración de Acceso" textFill="#1D1B20">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>

                              <!-- Contraseña -->
                              <VBox spacing="6.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="4.0">
                                       <children>
                                          <Label text="Contraseña" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <Label text="*" textFill="#B3261E">
                                             <font>
                                                <Font name="System Bold" size="13.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <PasswordField fx:id="txtContrasena" promptText="Mínimo 6 caracteres (letras y números)" 
                                                 style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                                 focusTraversable="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </PasswordField>
                                 </children>
                              </VBox>

                              <!-- Confirmar Contraseña -->
                              <VBox spacing="6.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="4.0">
                                       <children>
                                          <Label text="Confirmar Contraseña" textFill="#49454F">
                                             <font>
                                                <Font size="13.0" />
                                             </font>
                                          </Label>
                                          <Label text="*" textFill="#B3261E">
                                             <font>
                                                <Font name="System Bold" size="13.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </HBox>
                                    <PasswordField fx:id="txtConfirmarContrasena" promptText="Repetir la contraseña" 
                                                 style="-fx-background-color: #F7F2FA; -fx-border-color: #79747E; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #1D1B20; -fx-prompt-text-fill: #49454F;"
                                                 focusTraversable="true">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </PasswordField>
                                 </children>
                              </VBox>

                              <!-- Mensaje/Error -->
                              <Label fx:id="lblMensaje" textFill="#49454F" wrapText="true" visible="false">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>

                              <!-- Progress Indicator -->
                              <ProgressIndicator fx:id="progressIndicator" maxHeight="16.0" maxWidth="16.0" visible="false" 
                                               style="-fx-progress-color: #6750A4;" />

                              <!-- Botones -->
                              <HBox alignment="CENTER" spacing="12.0">
                                 <children>
                                    <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#handleVolver" prefWidth="120.0" prefHeight="40.0"
                                          style="-fx-background-color: transparent; -fx-text-fill: #6750A4; -fx-border-color: #6750A4; -fx-border-width: 1.5; -fx-border-radius: 20; -fx-font-size: 13; -fx-cursor: hand;"
                                          text="← Volver">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#handleRegistrar" prefWidth="120.0" prefHeight="40.0"
                                          style="-fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF; -fx-background-radius: 20; -fx-font-size: 13; -fx-cursor: hand;"
                                          text="✓ Registrar">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </center>
   <style>
      -fx-background-color: linear-gradient(to bottom, #FEF7FF, #F7F2FA);
   </style>
</BorderPane>
