<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.MainController">
   <top>
      <VBox>
         <children>
            <!-- Barra de Menú -->
            <MenuBar fx:id="menuBar" style="-fx-background-color: #8B4513;">
               <menus>
                  <Menu mnemonicParsing="false" text="🏪 Ventas" textFill="white">
                     <items>
                        <MenuItem fx:id="menuVentas" mnemonicParsing="false" onAction="#handleVentas" text="💰 Punto de Venta" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="🛠️ Administración" textFill="white">
                     <items>
                        <MenuItem fx:id="menuUsuarios" mnemonicParsing="false" onAction="#handleUsuarios" text="👥 Gestión de Usuarios" />
                        <MenuItem fx:id="menuCategorias" mnemonicParsing="false" onAction="#handleCategorias" text="📂 Gestión de Categorías" />
                        <MenuItem fx:id="menuProductos" mnemonicParsing="false" onAction="#handleProductos" text="☕ Gestión de Productos" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="menuReportes" mnemonicParsing="false" onAction="#handleReportes" text="📊 Reportes y Estadísticas" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="❓ Ayuda" textFill="white">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="ℹ️ Acerca de..." />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            
            <!-- Barra de Estado Superior -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f8f8f8; -fx-border-color: #dddddd; -fx-border-width: 0 0 1 0;">
               <children>
                  <Label text="☕ Sistema POS - Cobra Te" textFill="#8B4513">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Label text="👤 Usuario:" textFill="#666666">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblUserInfo" text="Nombre Usuario (Rol)" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  
                  <Separator orientation="VERTICAL" />
                  
                  <Label text="🕐" textFill="#666666">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblDateTime" text="01/01/2025 12:00" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  
                  <Separator orientation="VERTICAL" />
                  
                  <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 3;" text="🚪 Cerrar Sesión">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <VBox fx:id="centerContent" style="-fx-background-color: #f5f5f5;">
         <children>
            <!-- Contenido principal se carga dinámicamente aquí -->
            <Label text="Cargando..." textFill="#666666">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" style="-fx-background-color: #8B4513; -fx-text-fill: white;">
         <children>
            <Label text="© 2025 Cobra Te - Sistema POS para Cafetería" textFill="white">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
