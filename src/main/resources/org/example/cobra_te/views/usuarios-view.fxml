<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.UsuariosController">
   <top>
      <VBox spacing="15.0" style="-fx-background-color: white;">
         <children>
            <Label text="👥 Gestión de Usuarios" textFill="#8B4513">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Buscar:" textFill="#555555">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtBuscar" prefWidth="250.0" promptText="Buscar por nombre, apellido o correo..." />
                  
                  <Label text="Filtrar por rol:" textFill="#555555">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cmbFiltroRol" prefWidth="150.0" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 3;" text="🔄 Actualizar" />
                  <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#handleNuevo" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3;" text="➕ Nuevo" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="10.0">
         <children>
            <!-- Tabla de Usuarios -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableUsuarios" prefHeight="450.0">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNombres" prefWidth="120.0" text="Nombres" />
                        <TableColumn fx:id="colApellidoPaterno" prefWidth="120.0" text="Ap. Paterno" />
                        <TableColumn fx:id="colApellidoMaterno" prefWidth="120.0" text="Ap. Materno" />
                        <TableColumn fx:id="colCorreo" prefWidth="180.0" text="Correo Electrónico" />
                        <TableColumn fx:id="colRol" prefWidth="100.0" text="Rol" />
                        <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                        <TableColumn fx:id="colSexo" prefWidth="60.0" text="Sexo" />
                     </columns>
                  </TableView>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="btnEditar" disable="true" mnemonicParsing="false" onAction="#handleEditar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 3;" text="✏️ Editar" />
                        <Button fx:id="btnEliminar" disable="true" mnemonicParsing="false" onAction="#handleEliminar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 3;" text="🗑️ Eliminar" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <Label text="💡 Doble clic en una fila para editar" textFill="#888888">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Panel de Formulario -->
            <VBox fx:id="panelFormulario" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #f8f8f8; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-padding: 20;" visible="false">
               <children>
                  <Label fx:id="lblTituloFormulario" text="Nuevo Usuario" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <Separator />
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Nombres *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNombres" promptText="Nombres del usuario" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Apellido Paterno *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtApellidoPaterno" promptText="Apellido paterno" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Apellido Materno" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtApellidoMaterno" promptText="Apellido materno" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Correo Electrónico *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCorreo" promptText="usuario@ejemplo.com" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Contraseña *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="txtContrasena" promptText="••••••••" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Teléfono *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtTelefono" promptText="5551234567" />
                     </children>
                  </VBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Rol *" textFill="#555555">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbRol" prefWidth="150.0" promptText="Seleccionar" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Sexo" textFill="#555555">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbSexo" prefWidth="80.0" promptText="H/M" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <Separator />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleGuardar" prefWidth="100.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3;" text="💾 Guardar" />
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" prefWidth="100.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 3;" text="❌ Cancelar" />
                     </children>
                  </HBox>
                  
                  <Label text="* Campos requeridos" textFill="#888888">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
