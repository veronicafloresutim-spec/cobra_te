<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.CategoriasController">
   <top>
      <VBox spacing="15.0" style="-fx-background-color: white;">
         <children>
            <Label text="📂 Gestión de Categorías" textFill="#8B4513">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label text="Buscar:" textFill="#555555">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar categoría..." />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 3;" text="🔄 Actualizar" />
                  <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#handleNuevo" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3;" text="➕ Nueva Categoría" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <HBox spacing="10.0">
         <children>
            <!-- Tabla de Categorías -->
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableCategorias" prefHeight="450.0">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colDescripcion" prefWidth="400.0" text="Descripción" />
                     </columns>
                  </TableView>
                  
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="btnEditar" disable="true" mnemonicParsing="false" onAction="#handleEditar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 3;" text="✏️ Editar" />
                        <Button fx:id="btnEliminar" disable="true" mnemonicParsing="false" onAction="#handleEliminar" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 3;" text="🗑️ Eliminar" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <Label text="💡 Doble clic en una fila para editar" textFill="#888888">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Panel de Formulario -->
            <VBox fx:id="panelFormulario" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #f8f8f8; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-padding: 20;" visible="false">
               <children>
                  <Label fx:id="lblTituloFormulario" text="Nueva Categoría" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <Separator />
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Nombre *" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNombre" promptText="Nombre de la categoría" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Descripción" textFill="#555555">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="txtDescripcion" prefRowCount="4" promptText="Descripción de la categoría" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <Separator />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleGuardar" prefWidth="100.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 3;" text="💾 Guardar" />
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" prefWidth="100.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 3;" text="❌ Cancelar" />
                     </children>
                  </HBox>
                  
                  <Label text="* Campos requeridos" textFill="#888888">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
