<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cobra_te.controllers.RegistroController">
   <children>
      <VBox alignment="CENTER" spacing="30" style="-fx-background-color: #f5f5f5;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- Título -->
            <HBox alignment="CENTER" spacing="10">
               <children>
                  <Text fill="#8B4513" strokeType="OUTSIDE" strokeWidth="0.0" text="☕">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Text>
                  <VBox alignment="CENTER">
                     <children>
                        <Text fill="#8B4513" strokeType="OUTSIDE" strokeWidth="0.0" text="Cobra Te">
                           <font>
                              <Font name="System Bold" size="32.0" />
                           </font>
                        </Text>
                        <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Registro de Nuevo Cajero">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Formulario de Registro -->
            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
               <children>
                  <!-- Información Personal -->
                  <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Información Personal">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>

                  <!-- Nombres -->
                  <VBox spacing="5">
                     <children>
                        <Label text="Nombres *" textFill="#555555">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNombres" promptText="Ingrese los nombres" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>

                  <!-- Apellidos -->
                  <HBox spacing="15">
                     <children>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Apellido Paterno *" textFill="#555555">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtApellidoPaterno" promptText="Apellido paterno" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Apellido Materno" textFill="#555555">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtApellidoMaterno" promptText="Apellido materno" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <!-- Información de Contacto -->
                  <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Información de Contacto">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Text>

                  <!-- Correo -->
                  <VBox spacing="5">
                     <children>
                        <Label text="Correo Electrónico *" textFill="#555555">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtCorreo" promptText="correo@ejemplo.com" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>

                  <!-- Teléfono y Sexo -->
                  <HBox spacing="15">
                     <children>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Teléfono" textFill="#555555">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtTelefono" promptText="Número de teléfono" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Sexo *" textFill="#555555">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="cmbSexo" maxWidth="1.7976931348623157E308" promptText="Seleccionar" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                                 <items>
                                    <FXCollections fx:factory="observableArrayList">
                                       <String fx:value="M" />
                                       <String fx:value="F" />
                                    </FXCollections>
                                 </items>
                              </ComboBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <!-- Seguridad -->
                  <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Seguridad">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Text>

                  <!-- Contraseña -->
                  <VBox spacing="5">
                     <children>
                        <Label text="Contraseña *" textFill="#555555">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="txtContrasena" promptText="Mínimo 6 caracteres (letras y números)" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>

                  <!-- Confirmar Contraseña -->
                  <VBox spacing="5">
                     <children>
                        <Label text="Confirmar Contraseña *" textFill="#555555">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="txtConfirmarContrasena" promptText="Repetir la contraseña" style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>

                  <!-- Mensaje de estado -->
                  <Label fx:id="lblMensaje" textFill="#666666" wrapText="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>

                  <!-- Indicador de progreso -->
                  <ProgressIndicator fx:id="progressIndicator" maxHeight="30.0" maxWidth="30.0" />

                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="15">
                     <children>
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" prefWidth="120.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancelar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#handleRegistrar" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>

                  <!-- Información adicional -->
                  <VBox alignment="CENTER" spacing="5">
                     <children>
                        <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="* Campos requeridos">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Text>
                        <Text fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Los nuevos usuarios se registran con rol de cajero">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Text>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
