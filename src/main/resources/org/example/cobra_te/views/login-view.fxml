<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" maxWidth="400.0" spacing="20.0">
         <children>
            <!-- Logo/Título -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="☕ Cobra Te" textFill="#8B4513">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label text="Sistema POS - Cafetería" textFill="#666666">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Formulario de Login -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="Iniciar Sesión" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Correo Electrónico:" textFill="#555555">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtEmail" promptText="ejemplo@cobra_te.com" style="-fx-font-size: 14; -fx-padding: 10;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  
                  <VBox spacing="8.0">
                     <children>
                        <Label text="Contraseña:" textFill="#555555">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="txtPassword" promptText="••••••••" style="-fx-font-size: 14; -fx-padding: 10;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>
                  
                  <!-- Error Label -->
                  <Label fx:id="lblError" textFill="red" visible="false" wrapText="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  
                  <!-- Botones -->
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefWidth="120.0" style="-fx-background-color: #8B4513; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Ingresar">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="120.0" style="-fx-background-color: #cccccc; -fx-text-fill: #333333; -fx-background-radius: 5;" text="Cancelar">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <!-- Progress Indicator -->
                  <ProgressIndicator fx:id="progressIndicator" maxHeight="30.0" maxWidth="30.0" />
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>
            
            <!-- Información de usuarios demo -->
            <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5; -fx-padding: 15;">
               <children>
                  <Label text="Usuarios de Demostración:" textFill="#666666">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Admin: admin@cobra_te.com / admin123" textFill="#888888">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  <Label text="Cajero: maria@cobra_te.com / cajero123" textFill="#888888">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <!-- Separador visual -->
            <Separator opacity="0.3" style="-fx-background-color: #cccccc;">
               <VBox.margin>
                  <Insets bottom="5.0" left="50.0" right="50.0" top="10.0" />
               </VBox.margin>
            </Separator>

            <!-- Sección de registro -->
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Label text="¿No tienes cuenta?" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label text="Registra tu cuenta de cajero" textFill="#666666">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
                  <Button fx:id="btnRegistro" mnemonicParsing="false" onAction="#handleRegistro" prefWidth="180.0" style="-fx-background-color: #d2691e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Crear Cuenta">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
      </VBox>
   </center>
   <style>
      -fx-background-color: linear-gradient(to bottom, #f5f5f5, #e0e0e0);
   </style>
</BorderPane>
